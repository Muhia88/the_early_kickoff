{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@the-early-kickoff/auth": ["./packages/auth/auth.ts"],
      "@the-early-kickoff/db": ["./packages/db/index.ts"],
      "@the-early-kickoff/db/*": ["./packages/db/*"],
      "@the-early-kickoff/lib/*": ["./packages/lib/*"],
      "@the-early-kickoff/types/*": ["./packages/types/*"],
      "@the-early-kickoff/ui/*": ["./packages/ui/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "packages/auth/next-auth.d.ts"
  ],
  "exclude": ["node_modules"]
}
